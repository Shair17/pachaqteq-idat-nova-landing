---
import { Image } from "astro:assets";
import { cn } from "../utils/cn";

interface Props {
  img: string;
  name: string;
  body: string;
}

const { body, img, name } = Astro.props;
---

<figure
  class={cn(
    "relative w-64 cursor-pointer overflow-hidden rounded-2xl border p-4 transition-colors",
    "bg-neutral-950 border-neutral-900 hover:bg-neutral-900",
    "flex flex-col"
  )}
>
  <div class="flex flex-col gap-2 flex-1">
    <div class="aspect-square grow">
      <Image
        src={img}
        alt={name}
        class="rounded-2xl mx-auto w-full h-full object-cover"
        width="50"
        height="50"
      />
    </div>

    <div class="flex flex-col">
      <figcaption class="text-xl font-medium">
        {name}
      </figcaption>
    </div>
  </div>

  <blockquote class="mt-2 text-neutral-300">{body}</blockquote>
</figure>
